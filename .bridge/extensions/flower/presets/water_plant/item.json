{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "ff:{{IDENTIFIER}}_item",
      "category": "nature"
    },
    "components": {
      "minecraft:icon": { "texture": "{{IDENTIFIER}}" },
      "tag:flower": {},
      "minecraft:liquid_clipped": true,
      "minecraft:max_stack_size": 64,
      "minecraft:stacked_by_data": true,
      "minecraft:on_use_on": {
        "on_use_on": {
          "event": "place_block",
          "condition": "query.block_face == 1 && query.block_neighbor_has_all_tags(0, 0, 0, 'water')"
        }
      }
    },
    "events": {
      "place_block": {
        "run_command": {
          "command": [
            "fill ~ ~1 ~ ~ ~1 ~ ff:{{IDENTIFIER}} 0 replace air",
            "playsound dig.grass @a[r=5] ~ ~ ~ 0.4 1.0"
          ]
        }
      }
    }
  }
}
